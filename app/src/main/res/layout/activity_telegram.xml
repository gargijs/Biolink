<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back"
    android:layout_height="match_parent"
    tools:context=".AddLink">



    <TextView
        android:id="@+id/Add_Link_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_field"
        android:text="Telegram Link"
        android:textColor="@color/shade_black"
        android:textSize="20dp"
        android:textAlignment="center"/>


    <androidx.cardview.widget.CardView
        android:layout_below="@+id/Add_Link_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        android:background="@color/grey"
        app:cardCornerRadius="6dp"

        android:layout_margin="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/upper"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Button_text"
                    android:text="Telegram"
                    android:drawableLeft="@drawable/telegram"
                    android:drawablePadding="10dp"
                    android:textColor="@color/shade_black"
                    android:textSize="18dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"/>



                <EditText
                    android:id="@+id/text_link"
                    android:layout_below="@+id/Button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:padding="10dp"
                    android:hint="Enter your telegram username"
                    android:background="@drawable/input"
                    />
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:id="@+id/Save"
                android:padding="10dp"
                android:text="Copy Link"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@color/signup_btn"
                android:layout_below="@+id/upper"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>