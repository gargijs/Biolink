<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/input_field">
    
    
    
    <TextView
        android:id="@+id/check"
        android:text="Total Links Added"
        android:background="@drawable/input_field"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/shade_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check"
        android:text="Successful added links are"
        android:drawableTint="@color/signup_btn"
        android:drawableLeft="@drawable/ic_baseline_link_24"
        android:drawableRight="@drawable/ic_baseline_link_24"
        android:textColor="@color/signup_btn"
        android:textAlignment="center"
        android:background="@drawable/input_field"
        android:padding="10dp"
        android:id="@+id/suc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/suc"
        android:background="@drawable/input_field"
        android:id="@+id/Nolink"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="2"
        android:visibility="gone"
        android:textColor="@color/signin_btn"
        />
    <ProgressBar

        android:layout_below="@+id/Nolink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/prog"
        android:visibility="gone"
        />
</RelativeLayout>